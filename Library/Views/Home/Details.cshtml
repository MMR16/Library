@model DetailsViewModel
@{
    ViewData["Title"] = "Details";
}

<div class="">
    <form method="post">
        <div class="container">

            <div class="card border-dark">
                <div class="card-header bg-dark text-light ml-0 row container">
                    <div class="col-12 col-md-6"><h2 class="text-white">@Model.product.ProName</h2></div>
                    <div class="col-12 col-md-6 text-md-right"><h2 class="text-warning">@Model.product.ProPrice/@Model.product.Currencies</h2></div>
                </div>



                <div class="card-body">
                    <div class="container rounded p-2">
                        <div class="row">
                            <div class="col-6 col-lg-4 p-1 text-center">
                                <img src="@WC.ImagePath@Model.product.ProImage" alt="@Model.product.ProName Image" style="width:20rem;height:27rem; border-radius:10px;" />
                            </div>
                            <div class="col-12 col-lg-8">
                                <div class="row pl-3">
                                    <div class="col-12 p-2">
                                        <span class="badge p-3 border" style="background-color:azure;">@Model.product.Category.CatName</span>
                                        <span class="badge p-3 border" style="background-color:antiquewhite;">@Model.product.AppType.TypeName</span>
                                        <h2 class="p-1">@Html.DisplayNameFor(r=>r.product.ProDescription)</h2>
                                        <h3 class="text-success" style="word-break:break-word;"> @Html.Raw(Model.product.ProDescription)</h3>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>


                <div class="card-footer bg-dark border-dark">
                    <div class="row">
                        <div class="col-12 col-md-6 pb-1">
                            <a class="btn btn-secondary form-control btn-lg" asp-action="Index" asp-controller="home"><i class="fa fa-backward">&nbsp;</i>Back To Home</a>
                        </div>
                        <div class="col-12 col-md-6">
                            <input type="submit" class="btn btn-primary form-control btn-lg" value="Add to cart" />
                        </div>
                    </div>
                </div>


            </div>
        </div>
    </form>
</div>