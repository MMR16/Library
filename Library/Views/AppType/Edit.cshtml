@model AppType
@{
    ViewData["Title"] = "Update Product Type";
}


<form asp-action="Edit" asp-antiforgery="true">
    <div class="border p-3">
        <input asp-for="TypeId" hidden/>
        <div class="form-group row">
            <h2 class="text-info pl-3">Update Product Type</h2>
        </div>

        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-3">
                        <label asp-for="TypeName"></label>
                    </div>
                    <div class="col-5">
                        <input asp-for="TypeName" class="form-control" />
                    </div>
                    <div class="col-4"><span asp-validation-for="TypeName" class="text-danger"></span></div>
                </div>
                               
                <div class="form-group row">
                    <div class="col-8 offset-4 row">
                        <div class="col">
                            <input type="submit" value="Update" class="btn btn-success" />
                        </div>
                        <div class="col">
                            <a asp-controller="Apptype" asp-action="index" class="btn btn-dark"><i class="fa fa-backward">&nbsp;</i> Back To App Type</a>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
    <div asp-validation-summary="All" class="text-danger"></div>

</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
