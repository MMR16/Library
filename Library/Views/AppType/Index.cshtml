@model IEnumerable<AppType>
@{
    ViewData["Title"] = "Product Types";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h1 class="text-primary"> Product Type List</h1>
        </div>
    </div>
    <div class="row pt-4">
        <div class="col-md-3 ">
            <a class="btn btn-primary" asp-action="Create"> <i class="fa fa-plus"> &nbsp; </i> Add New Product Type</a>
        </div>
    </div>
    <br />
    @if (Model.Count() > 0)
    {
        <table class=" table table-bordered table-hover text-center">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(w => w.TypeName)</th>
                    <th>Operations</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(q => item.TypeName)</td>
                        <td>
                            <div class="w-75 btn-group" role="group">
                                <a  asp-action="Edit" asp-route-Id="@item.TypeId" class="btn btn-primary mx-2 "><i class="fa fa-edit"> &nbsp; </i>Edit</a>
                                <a  asp-action="Delete" asp-route-Id="@item.TypeId" class="btn btn-danger mx-2"><i class="fa fa-trash"> &nbsp; </i>Delete</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>

        </table>
    }
    else
    {
        <h3 class="text-danger">Their Is No Any Product Types</h3>
    }
</div>
