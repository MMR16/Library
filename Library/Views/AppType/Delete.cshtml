@model AppType
@{
    ViewData["Title"] = "Delete Product Type";
}


<form asp-action="Delete" asp-antiforgery="true">
    <div class="border p-3">
        <input asp-for="TypeId" hidden />
        <div class="form-group row">
            <h2 class="text-info pl-3 text-danger">Delete Product Type With I'ts All Related Products</h2>
        </div>

        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-3">
                        <label asp-for="TypeName"></label>
                    </div>
                    <div class="col-5">
                        <input asp-for="TypeName" class="form-control" disabled />
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-8 offset-4 row">
                        <div class="col">
                            <input type="submit" value="Delete" class="btn btn-danger" />
                        </div>
                        <div class="col">
                            <a asp-controller="Apptype" asp-action="index" class="btn btn-dark"><i class="fa fa-backward">&nbsp;</i> Back To Product Type</a>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</form>
