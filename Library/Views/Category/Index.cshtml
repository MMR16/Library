@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h1 class="text-primary"> Categories List</h1>
        </div>
    </div>
    <div class ="row pt-4">
        <div class="col-md-3 ">
            <a class="btn btn-primary" asp-action="Create" asp-controller="Category"> <i class="fa fa-plus"> &nbsp; </i> Add New Category </a>
        </div>
</div>
    <br />
    @if (Model.Count() > 0)
    {
        <table class=" table table-bordered table-hover text-center">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(w => w.CatName)</th>
                    <th>@Html.DisplayNameFor(w => w.DisplayOrder)</th>
                    <th @*colspan="2"*@>Operations</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(q => item.CatName)</td>
                        <td>@Html.DisplayFor(q => item.DisplayOrder)</td>
                        <td>
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="Category" asp-action="Edit" asp-route-Id="@item.CatId" class="btn btn-primary mx-2 "><i class="fa fa-edit"> &nbsp; </i>Edit</a>
                                <a asp-controller="Category" asp-action="Delete" asp-route-Id="@item.CatId" class="btn btn-danger mx-2"><i class="fa fa-trash"> &nbsp; </i>Delete</a>
                            </div>
                        </td>
                        @*<td><a asp-controller="Category" asp-action="Edit" asp-route-CatId="@item.CatId" class="btn btn-info">Edit</a> </td>*@
                        @*<td> <a asp-controller="Category" asp-action="Delete" asp-route-CatId="@item.CatId" class="btn btn-danger">Delete</a> </td>*@
                    </tr>
                }
            </tbody>

        </table>
    }
    else
    {
        <h3 class="text-danger">Their Is No Any Categories</h3>
    }
</div>
