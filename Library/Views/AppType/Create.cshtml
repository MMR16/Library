@model AppType
@{
    ViewData["Title"] = "Add Product Type";
}

<form asp-action="Create" asp-antiforgery="true">
    <div class="border p-3">

        <div class="form-group row">
            <h2 class="text-info pl-3">Add Product Type</h2>
        </div>

        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-3">
                        <label asp-for="TypeName"></label>
                    </div>
                    <div class="col-5">
                        <input asp-for="TypeName" class="form-control" />
                    </div>
                    <div class="col-4"><span asp-validation-for="TypeName" class="text-danger"></span></div>
                </div>

                <div class="form-group row">
                    <div class="col-8 offset-4 row">
                        <div class="col">
                            <input type="submit" value="Add" class="btn btn-info" />
                        </div>
                        <div class="col">
                            <a asp-controller="protype" asp-action="index" class="btn btn-dark">Back To Product Type</a>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>

</form>

@section Scripts{
        <partial name="_ValidationScriptsPartial" />
}
