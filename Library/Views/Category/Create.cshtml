@model Category
@{
    ViewData["Title"] = "Create";
}

<form asp-action="Create" asp-controller="Category" asp-antiforgery="true" >
    <div class="border p-3">

        <div class="form-group row">
            <h2 class="text-info pl-3">Add Category</h2>
        </div>

        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-3">
                        <label asp-for="CatName"></label>
                    </div>
                    <div class="col-5">
                        <input asp-for="CatName" class="form-control" />
                    </div>
                    <div class="col-4"><span asp-validation-for="CatName"></span></div>
                </div>

                <div class="form-group row">
                    <div class="col-3">
                        <label asp-for="DisplayOrder"></label>
                    </div>
                    <div class="col-5">
                        <input asp-for="DisplayOrder" class="form-control" />
                    </div>
                    <div class="col-4"><span asp-validation-for="DisplayOrder"></span></div>
                </div>

                <div class="form-group row">
                    <div class="col-8 offset-4 row">
                        <div class="col">
                            <input type="submit"  value="Add" class="btn btn-info" />
                        </div>
                        <div class="col">
                            <a asp-controller="Category" asp-action="index" class="btn btn-dark">Back To Categries</a>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</form>
@section Scripts{
@await Html.PartialAsync("_ValidationScriptsPartial.cshtml")
 }
