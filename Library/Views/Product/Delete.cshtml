@model Library.Models.Product

@{
    ViewData["Title"] = "Delete Product";
}

<h1 class="text-danger">Are you sure you want to delete this product?</h1>
<div>
    <h3>@Html.DisplayFor(model => model.ProName)</h3>
    <hr />
    <dl class="row pt-4">
        <div class="col-sm-8 ">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ProName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ProName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ProDescription)
            </dt>
            <dd class="col-sm-10 " style="height:auto; width: auto; word-wrap: break-word;">
                @Html.Raw(Model.ProDescription)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ProPrice)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ProPrice)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.CatId)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(q => q.Category.CatName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.AppType)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(q => q.AppType.TypeName)
            </dd>
        </div>

        <div class="col-sm-4 ">
            <dd class="col-sm-12">
                <img src="@WC.ImagePath@Model.ProImage" style="height:20rem; width:20rem; border-radius:5rem;" alt="Alternate Text" />
            </dd>
        </div>

    </dl>

    <form asp-action="Delete">
        @Html.AntiForgeryToken()
        <input type="hidden" name="id" value="@Model.ProId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index" asp-controller="Product" class="btn btn-dark"><i class="fa fa-backward">&nbsp;</i> Back to Products</a>
    </form>
</div>
